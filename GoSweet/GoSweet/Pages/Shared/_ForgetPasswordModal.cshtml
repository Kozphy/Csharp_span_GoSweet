@{

    string? currentController = @ViewContext.RouteData.Values["controller"]!.ToString();
}

<!-- Vertically centered scrollable modal -->
    <!-- Modal -->
    <div class="modal fade " id="ForgetPasswordModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">忘記密碼?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <label class="form-label">輸入你註冊會員的電子信箱</label>
                        <input name="emailAddress" type="email"  class="form-control"  required/>
                        <p class="mt-2">完成後，請依密碼重設信執行即可登入。</p>
                        <hr />
                        <div class="mt-2 d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2">重設密碼</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

