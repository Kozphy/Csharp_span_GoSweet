@{
    Layout = "_LayoutLoginSignUp";
}

<link rel="stylesheet" href="~/css//SignUp/SignUp.css"/>
<link rel="stylesheet" href="~/css/SignUp/GoToAnother.css" />

<div class="container-fluid px-0 position-relative">
    <div class="row g-0">
        <div class="col-6">
            <img class="img-fluid vh-100 w-100" src="~/img/SignUp/註冊頁面pic.jpg" alt="SignUp pic" />
        </div>
        <div class="col-6  d-flex flex-column SignUp-section ">
            <div class="signUp-form m-auto">
                <div class="form-title-box bg-mute-2 py-2 text-white rounded mb-2">
                    <h2 class="display-6">SignUp</h2>
                </div>
                <form method="post" asp-action="SignUp">
                    <div class="py-2">
                        <label for="AccountName" class="form-label">帳戶名稱</label>
                        <input type="text" name="AccountName" id="AccountName" class="form-control" required />
                    </div>
                    <div class="py-2">
                        <label for="UserEmail" class="form-label" >Email</label>
                        <input type="email" name="UserEmail" id="UserEmail" class="form-control" title="Email pattern Error" pattern="[a-z0-9]+@@[a-z]+\.[a-z]{2,3}" required />
                    </div>
                    <div class="py-2">
                        <label for="UserPassword" class="form-label">密碼</label>
                        <input type="password" name="UserPassword" id="UserPassword" class="form-control"  required/>
                    </div>
                    <div class="py-2">
                        <label for="UserPasswordCheck" class="form-label">再次確認密碼</label>
                        <input type="password" name="UserPasswordCheck" id="UserPasswordCheck" class="form-control"  required/>
                    </div>
                    <span class="passwordCheckResult text-danger"></span>
                    <div class="mt-2">
                        <div class="row">
                            <div class="col-12 mb-2 mb-md-0 col-md-12">
                                <button type="submit" class="SignUpBtn w-100 btn btn-mute-2  text-dark">註冊</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            @await Html.PartialAsync("~/Pages/Shared/_SignUpNavigation.cshtml");
        </div>
    </div>
</div>

<script src="~/js/Home/PasswordCheck.js"></script>
