@model IEnumerable<GoSweet.Models.FirmPagetable>
<script src="https://code.jquery.com/jquery-3.7.0.slim.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" type="text/css" href="~/css/Firm/賣場資料.css">

<body>
    <div class="container" id="firmDataContent">
        <p id="marketdata">廠商資料</p>
        <div id="content" style="border: none solid #ccc; box-shadow: 0 0 10px #ddd;">
            <div style="float:right">
@*                <button id="editdata">
                    <a href="/FirmPage/Edit/60000 asp-action="Edit" style="text-decoration:none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                </button>*@
            </div>
            <br>
            <form method="post" action="FirmPage/">
                <div class="row">
                    <div class="col-2 m-auto" style="line-height:25px;">
                        <label>廠商名稱 </label>
                    </div>
                    <div class="col-10">
                        <input type="text" class="form-control" style="font-size:23px;" name="FPagename" value="@ViewBag.FirmName">
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-2 m-auto" style="line-height:25px;">
                        <label>廠商圖片 </label>
                    </div>
                    <div class="col-10">
                        <img src="@ViewBag.FirmPic"
                             style="width:230px;">
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-2 m-auto" style="line-height:25px;">
                        <label>廠商介紹 </label>
                    </div>
                    <div class="col-10">
                        <textarea style="overflow:hidden; resize:none; " class="form-control" cols="80" rows="5" name="FMessage">@ViewBag.FirmMes"
            </textarea>
                    </div>
                </div>                   
            </form>
            <div style="padding-left:47%; padding-top:2.2%;">
                <button onclick="showAlert()" class="editButton" style="font-size:25px;">修改</button>
            </div>
            <br />
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>
    <script>
        const showAlert = () => {
            Swal.fire({
                icon: 'warning',
                title: '確定要修改嗎?',
                showCancelButton:true,
                cancelButtonText:'取消',
                confirmButtonText:'確認',
            }).then((result) => {
                if (result.isConfirmed) {
                    // User clicked "確認", show the second SweetAlert prompt
                    showSecondAlert();
                }
            });
        };
        const showSecondAlert = () => {
            Swal.fire({
                icon: 'success',
                title: '修改完成!',
                confirmButtonText: '確認',
            });
        };
    </script>
</body>
