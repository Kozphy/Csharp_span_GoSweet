@using Newtonsoft.Json;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_LayoutLoginSignUp";
}
@section Head{
    <link rel="stylesheet" href="~/css/Login/Login.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <script src="https://www.google.com/recaptcha/enterprise.js?onload=onloadCallback&render=explicit"
        async defer></script>
}



@await Html.PartialAsync("~/Pages/Shared/_Login.cshtml");


@await Html.PartialAsync("~/Pages/Shared/_ForgetPasswordModal.cshtml");





@section Scripts{
    <script src="~/lib/sweetalert2/sweetalert2.js"></script>
    <script src="~/js/EmailCheck.js"></script>

    <script>
        function showSwal(icon, title, message) {
            Swal.fire({
                icon: icon,
                title: title,
                text: message,
            });
        }
    </script>


   @if (TempData["firmAccountNotExistMessage"] != null)
    {
        <script>
            let firmAccountNotExistMessage = @Html.Raw(JsonConvert.SerializeObject(TempData["firmAccountNotExistMessage"]));
            showSwal('error', 'Oops...', firmAccountNotExistMessage);
        </script>
    }

    @if (TempData["firmAccountLoginSuccessMessage"] != null)
    {
        <script>
            let firmAccountLoginSuccessMessage = @Html.Raw(JsonConvert.SerializeObject(TempData["firmAccountLoginSuccessMessage"]));
            showSwal('success', 'LoginSuccess...', firmAccountLoginSuccessMessage);
        </script>
    }

    @if (TempData["sendEmailResultMessage"] != null)
    {
        <script>
            let sendEmailResultMessage = @Html.Raw(JsonConvert.SerializeObject(TempData["sendEmailResultMessage"]));
            showSwal('', 'Send Email Status...', sendEmailResultMessage);
        </script>
    }


    <script type="text/javascript">
        var onloadCallback = function () {
            grecaptcha.enterprise.render('html_recaptcha', {
                'sitekey': '6LctgbwmAAAAAAAmQPkFBggpXJwfl8hfBhV0wYUr',
                'action': 'LOGIN'
            });

            let form_submit = document.querySelector(".login-form");
            // 表單寄出如果沒有勾 recaptcha 提示要勾
            form_submit.addEventListener("submit", function (e) {
                if (grecaptcha.enterprise.getResponse() === '') {
                    e.preventDefault();
                    alert("please check recaptcha");
                }
            });
        };
    </script>
};


