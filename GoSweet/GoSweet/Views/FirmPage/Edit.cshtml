@model GoSweet.Models.ProductDatatable
 
@{
    ViewData["Title"] = "Edit";
}
<div class="page-set" style="margin-left:15%; margin-right:15%; font-size:23px;">
    <div style="font-size:40px; padding-bottom:1%; padding:1%;">
        <h1>商品編輯</h1>
	</div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           @* <div class="form-group">
                <label asp-for="FNumber" class="control-label"></label>
                <select asp-for="FNumber" class="form-control" asp-items="ViewBag.FNumber"></select>
                <span asp-validation-for="FNumber" class="text-danger"></span>
            </div>*@
          <div >
            <input type="hidden" asp-for="PNumber" />
            <div class="row" style="padding-left:3%;">
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                            <label asp-for="PName" class="control-label">商品名稱</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                            <input asp-for="PName" class="form-control"  />
                            <span asp-validation-for="PName" class="text-danger"></span>
                </div>
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                    <label asp-for="PSpec" class="control-label">商品規格</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                    <input asp-for="PSpec" class="form-control" />
                    <span asp-validation-for="PSpec" class="text-danger"></span>
                </div>
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                    <label asp-for="PCategory" class="control-label">商品種類</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                    <input asp-for="PCategory" class="form-control" />
                    <span asp-validation-for="PCategory" class="text-danger"></span>
                </div>
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                    <label asp-for="PPrice" class="control-label">商品價格</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                    <input asp-for="PPrice" class="form-control" />
                    <span asp-validation-for="PPrice" class="text-danger"></span>
                </div>
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                    <label asp-for="PDescribe" class="control-label">商品描述</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                    <textarea asp-for="PDescribe" class="form-control" rows="12"></textarea>
                    <span asp-validation-for="PDescribe" class="text-danger"></span>
                </div>
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                    <label asp-for="PSavedate" class="control-label">保存期限</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                    <input asp-for="PSavedate" class="form-control" />
                    <span asp-validation-for="PSavedate" class="text-danger"></span>
                </div>
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                    <label asp-for="PSaveway" class="control-label">保存方式</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                    <input asp-for="PSaveway" class="form-control" />
                    <span asp-validation-for="PSaveway" class="text-danger"></span>
                </div>
                <div class="col-3 m-auto" style="line-height:25px; text-align: center; padding-bottom:1%;">
                    <label asp-for="PInventory" class="control-label">商品庫存</label>
                </div>
                <div class="col-9" style="padding-bottom:1%;">
                    <input asp-for="PInventory" class="form-control" />
                    <span asp-validation-for="PInventory" class="text-danger"></span>
                </div>
             </div>
                  
           </div>
                <div style="margin-left:50%; padding:1%;">
                    <input type="submit" value="保存" class="btn btn-primary" style=" color:floralwhite;background-color:#c3a6a0e1;border:none; font-size:20px;" />
                </div>
        </form>        
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
