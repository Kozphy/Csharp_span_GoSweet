<script>
	$("#buyCart").click(() => {
		// alert('已加入購物車')
		Swal.fire('已加入購物車')
		var aa = 2
		$(".full_star").css("width", `${(aa / 5) * 100}%`)
		$(".evaluate span").text(parseFloat(aa).toFixed(1))
	})

